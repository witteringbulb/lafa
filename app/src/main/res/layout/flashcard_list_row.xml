<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_flashSetDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/md_amber_50">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/flashSetListRowPadding"
            android:columnCount="5"
            android:orientation="vertical"
            android:rowCount="2">

            <Button android:id="@+id/button_flashCardMarker"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:text="@string/vertical_ellipsis"
                android:background="@null"
                android:textSize="22sp"
                android:layout_width="32dp"
                android:layout_gravity="top"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/textView_flashCardQuestion"
                android:layout_column="1"
                android:layout_columnSpan="4"
                android:layout_row="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                tools:text="Question" />

            <TextView
                android:id="@+id/textView_flashCardAnswer"
                android:layout_column="1"
                android:layout_columnSpan="4"
                android:layout_row="1"
                android:layout_gravity="start"
                android:textStyle="bold"
                tools:text="Question" />
        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>